@model IEnumerable<SMCC.Models.AspNetUser>

@{
    ViewBag.Title = "Index";
}

@using (Html.BeginForm())
{
    <h2>User Management</h2>
    <table class="table">
        <tr>
            <th>
                Username / Email
            </th>
            <th>
                Role
            </th>
            <th></th>
        </tr>

        @foreach (var user in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => user.UserName)
                </td>
                <td>
                    |
                    @foreach (var role in user.AspNetRoles)
                    {
                        <span>@Html.DisplayFor(modelItem => role.Name) |</span>
                    }
                </td>
                <td>
                    @Html.ActionLink("Add", "Create", new { id = user.Id }) | 
                    @Html.ActionLink("Remove", "Remove", new { id = user.Id })
                </td>
            </tr>
        }

    </table>
}