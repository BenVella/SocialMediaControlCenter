@model IEnumerable<SMCC.Models.Article>

@{
    ViewBag.Title = "Articles Pending Editorial Review";
}

<h2>Pending Editorial Review</h2>

<table class="table">
    <tr>
        <th>
            User
        </th>
        <th>
            Current State
        </th>
        <th>
            Title
        </th>
        <th>
            Content
        </th>
        <th>
            Date Created
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AspNetUser.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArticleState.StateName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.ArticleId }) |
                @Html.ActionLink("Review", "EditorialReview", new { id = item.ArticleId })
            </td>
        </tr>
    }

</table>
